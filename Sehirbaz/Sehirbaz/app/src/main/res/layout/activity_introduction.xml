<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.sehirbaz.Introduction"
    android:orientation="horizontal"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@color/newBlack"
    >

    <TextView
        android:id="@+id/tvFuture"
        android:layout_width="wrap_content"
        android:layout_height="93dp"

        android:layout_marginEnd="138dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="110dp"
        android:alpha="0"
        android:background="@color/newBlack"
        android:fontFamily="@font/faster_one"
        android:text="FUTURE"
        android:textColor="@color/newTrueWhite"
        android:textSize="85sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTechnologies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="122dp"
        android:layout_marginEnd="179dp"
        android:layout_marginStart="179dp"
        android:alpha="0"
        android:fontFamily="@font/coda"
        android:text="TECHNOLOGIES"
        android:textColor="@color/newTrueWhite"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFuture"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
